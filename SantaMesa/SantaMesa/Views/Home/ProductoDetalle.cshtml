                <a href="https://localhost:44355/Home/ProductoDetalle/19" class="btn btn-primary btn-santamesa" role="button">Ver mas</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
            <img src="https://diadejuegos.com/380-large_default/sushi-go.jpg" alt="...">
            <div class="caption">
                <h3>SUSHI GO</h3>
                <div class="row">
                    <div class="col-md-8">
                        <p>
                            60
                        </p>
                    </div>
                    <div class="col-md-4">
                        <span class="glyphicon glyphicon-share-alt"></span>
                        <span class="glyphicon glyphicon-heart"></span>
                    </div>
                </div>

                <a href="https://localhost:44355/Home/ProductoDetalle/20" class="btn btn-primary btn-santamesa" role="button">Ver mas</a>
            </div>
        </div>
    </div>
</div>


<script>
    var less = document.getElementById("less");
    var more = document.getElementById("more");
    var cantidad = document.getElementById("cantidad");
    var contador = parseInt(cantidad.textContent);
    less.addEventListener("click", e => {
        if (contador > 1) {
            contador--;
            cantidad.innerHTML = contador;
        }
    })
    more.addEventListener("click", e => {
        if (contador < 11) {
            contador++
            cantidad.innerHTML = contador;
        }
    })
</script>
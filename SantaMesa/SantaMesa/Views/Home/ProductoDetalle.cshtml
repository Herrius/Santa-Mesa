@model SantaMesa.Models.Productos
@{
    ViewBag.Title = "ProductoDetalle";
}

<h2>ProductoDetalle</h2>
<div class="container">
    <img class="img-fluid banner-img" src="~/styles/img/catalogo.png" />

</div>
<div class="row">
    <div class="col-md-4">
        <img src=" @Html.DisplayFor(model => model.imagen)" alt="Alternate Text" width="400" />
    </div>
    <div class="col-md-8">
        <h3> @Html.DisplayFor(model => model.nombre_producto)</h3>
        <small>
            @{Html.DisplayFor(model => model.estado);}
        </small>
        <p> @Html.DisplayFor(model => model.descripcion)</p>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <h4>Precio</h4>
                <h3>S/@Html.DisplayFor(model => model.precio)</h3>
            </div>
        </div>
        <hr />
        <p>Cantidad</p>
        <div class="">
            <button type="button" class="btn btn-primary " id="less">-</button>
            <p id="cantidad" class="count">1</p>
            <button type="button" class="btn btn-primary " id="more">+</button>
        </div>
        <br />
        <button type="button" class="btn btn-primary">Agregar a carrito</button>


    </div>
</div>
<div class="row ">


    <h3 class="text-center">Productos Vinculados</h3>

@{ 
    Layout = "LayoutVendedor.cshtml";
}

<div>
    <div class="text-center container">
        <h3>Agregar Producto</h3>
    </div>
    <br />
    <form>
        <div class="row">
            <div class="col-md-4">
                <label for="juego_nombre">Nombre del juego</label>
                <div class="form-group">
                    <input type="text" class="form-control input-reset" id="juego_nombre" placeholder="Catan">
                </div>
            </div>
            <div class="col-md-4">
                <label for="juego_codigo">Codigo del producto</label>
                <div class="form-group">
                    <input type="text" class="form-control input-reset" id="juego_codigo" placeholder="CATDEV95">
                </div>
            </div>
            <div class="col-md-4">
                <label for="juego_idioma">Idioma del producto</label>
                <div class="form-group">
                    <select class="form-control input-reset">
                        <option>Escoga una opcion</option>
                        <option>Ingles</option>
                        <option>Español</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="juego_edad">Edad minima para el juego</label>
                <div class="form-group">
                    <input type="text" class="form-control input-reset" id="juego_edad" placeholder="12">
                </div>
            </div>
            <div class="col-md-4">
                <label for="juego_url">Url de la imagen</label>
                <div class="form-group">
                    <input type="text" class="form-control input-reset" id="juego_url" placeholder="google.com/imagenes">
                </div>
            </div>
            <div class="col-md-4">
                <label for="juego_categoria">Categoria del producto</label>
                <div class="form-group">
                    <select class="form-control input-reset">
                        <option>Escoga una opcion</option>
                        <option>Familiar</option>
                        <option>Party Game</option>
                        <option>Adultos</option>
                        <option>Casual</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label for="descripcion">Descripcion del juego</label>
                <div class="form-group">
                    <textarea class="form-control input-reset" placeholder="El juego trata sobre...." rows="3"></textarea>
                </div>
            </div>
           
        </div>
        <div class="container text-center">
            <button type="submit" class="btn btn-default">Registrar Producto</button>
        </div>
    </form>
</div>
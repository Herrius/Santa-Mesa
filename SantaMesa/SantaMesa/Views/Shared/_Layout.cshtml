<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/styles/index.css"/>
</head>
<body>
    <div class="navbar fondo">

        <div class="container">

            <div class="nav navbar-nav">
                <img src="~/styles/img/santamesa.png" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="menu">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="menu">@Html.ActionLink("Catalogo", "Catalogo", "Home")</li>
                    <li class="menu">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    <li class="menu">@Html.ActionLink("Login", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>
    <footer class="chess text-center">
        <div>
            <h3 class="chess_text">Registrate Y Enterate De Nuestras Promociones</h3>
            <div>
                <input type="type" name="name" value="" class="form-control center-block" />
                <button class="btn btn_chess chess_input">Enviar</button>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
